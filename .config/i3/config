bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPause exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

for_window [class="^.*"] border pixel 1
for_window [class="zoom"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="xpad"] floating enable
for_window [class="Gnome-power-statistics"] floating enable
for_window [class="jetbrains-idea"] layout tabbed

# launch polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

exec_always --no-startup-id setxkbmap -rules evdev -model pc105 -layout us -variant intl
exec_always --no-startup-id feh --bg-scale ~/Pictures/wallpaper.png
exec_always --no-startup-id ~/.screenlayout/dual_screen.sh

exec --no-startup-id i3-msg 'workspace $w1; exec franz'
exec --no-startup-id i3-msg 'workspace $w10; append_layout ~/.config/i3/w10.json'
exec --no-startup-id i3-msg 'workspace $w10; exec urxvt -e ncmpcpp -s clock'
exec --no-startup-id i3-msg 'workspace $w10; exec urxvt -e cava'
exec --no-startup-id i3-msg 'workspace $w10; exec urxvt -e ncmpcpp -s playlist'
exec --no-startup-id i3-msg 'workspace $w2;'
exec --no-startup-id xrdb -merge ~/.Xresources
exec --no-startup-id compton -f
exec --no-startup-id synclient VertScrollDelta=-113 HorizTwoFingerScroll=1
exec --no-startup-id blueman-manager

assign [class="Google-chrome"] $w2
assign [class="jetbrains-idea"] $w3
assign [class="jetbrains-datagrip"] $w5

gaps inner 15
smart_gaps on
